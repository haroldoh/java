//Update the values of arr to be 10 by multiplying 5 to each element

public class Main
{
	public static void main(String[] args) {
		int[] arr = {2 , 2 , 2 , 2 , 2 , 2};
		int[] arr2 = new int[6];
		for(int i=0;i<arr2.length;i++){
		    arr2[i] = arr2[i]+i;
		}
		for(int i:arr2){
		    System.out.println(i);
		}
		for(int i=0;i<arr.length;i++){
		    arr[i] = arr[i]*5;
		    System.out.println(arr[i]);
		}
    }
}
