//add 0,1,2,3,4,5 to each element of arr2 using a loop

public class Main
{
	public static void main(String[] args) {
		int[] arr = {2 , 2 , 2 , 2 , 2 , 2};
		int[] arr2 = new int[6];
		for(int i=0;i<arr2.length;i++){
		    arr2[i] = arr2[i]+i;
		}
		for(int i:arr2){
		    System.out.println(i);
		}
    }
}
